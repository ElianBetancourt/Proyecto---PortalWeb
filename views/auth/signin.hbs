<div class="bg_container">
  <div class="img">
    <img src="/images/undraw_welcome.svg" alt="">
  </div>

  <div class="login_container">
 
    <form action="/signin" method="POST">

    {{>message}}

      <h2>Sign in</h2>

      <div class="input_div one">
        <div class="i">
          <i class='bx bxs-user'></i>
        </div>
        <div>
          <h5>Username</h5>
          <input class="input" type="text" name="username" id="">
        </div>
      </div>

      <div class="input_div two">
        <div class="i">
          <i class='bx bxs-lock'></i>
        </div>
        <div>
          <h5>Password</h5>
          <input class="input" type="password" name="password" id="">
        </div>
      </div>

      <a href="/signup">Register now...</a>
      <input type="submit" class="btn" value="login">
    </form>
  </div>
</div>

<script>
  const inputs = document.querySelectorAll('.input');

  function focusFunc() {
    let parent = this.parentNode.parentNode;
    parent.classList.add('focus')
  }

  function blurFunc() {
    let parent = this.parentNode.parentNode;
    if (this.value == "") {
      parent.classList.remove('focus')
    }
  }

  inputs.forEach(inputs => {
    inputs.addEventListener('focus', focusFunc);
    inputs.addEventListener('blur', blurFunc);
  });

</script>